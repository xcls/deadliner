<div class="projects-header">
  <img class="projects-avatar" src="<%= github_user.avatar_url %>" alt="<%= github_user.name %>">
  <p class="projects-instructions">
  Select a project to visualize its milestones
  </p>
</div>
<ul class="projects">
  <% projects.each do |project| %>
    <li class="project">
      <div class="project-details">
        <div class="project-name">
          <%= link_to project.full_name, project.to_path %>
        </div>
        <div class="project-description">
          <%= project.description %>
        </div>
      </div>
      <a class="project-share" href="#"></a>
    </li>
  <% end %>
</ul>
<h2>Projects</h2>
<table>
  <thead>
    <tr>
      <td>Project</td>
      <td>Open tasks</td>
    </tr>
  </thead>
  <tbody>
<% projects.each do |project| %>
  <tr>
    <td><%= link_to project.full_name, project_path(project.id) %></td>
    <td><%= project.task_count %></td>
    <td>
      <% if dashboard = Dashboard.find_by_project_identifier(project.full_name)  %>
        <a data-clipboard-text='<%= dashboard_url(link_slug: dashboard.link_slug)%>' id='d_clip_button' title='Click me to copy to clipboard.'>Copy link <a/>
      <% else %>
          <%= link_to "Share", new_dashboard_path(dashboard) %>
      <% end %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>

<%= paginate projects %>
