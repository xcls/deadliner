<h2>Projects</h2>
<table>
  <thead>
    <tr>
      <td>Project</td>
      <td>Open tasks</td>
    </tr>
  </thead>
  <tbody>
<% projects.each do |project| %>
  <tr>
    <td><%= link_to project.full_name, project_path(project.id) %></td>
    <td><%= project.task_count %></td>
  </tr>
<% end %>
  </tbody>
</table>

<%= paginate projects %>
