<%= simple_form_for dashboard, html: {id: 'general-form'} do |f| %>
  <%= f.input :project_uid, disabled: true %>
  <%= f.input :slug, label: "URL: #{root_url}x/" %>
  <%= f.input :show_tasks %>
  <%= f.input :published %>

  <p class="text-left">
    <%= link_to "Cancel", projects_path, class: "btn default" %>
    <%= f.submit class: 'btn primary' %>
  </p>
<% end %>
