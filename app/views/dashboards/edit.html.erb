<div class="projects-header">
  <%= user_avatar(github_user) %>
  <p class="projects-instructions">
  Configure a public dashboard
  </p>
</div>


<div class="dashboard-form">
  <h3>Options</h3>
  <%= render 'form', dashboard: dashboard %>
  <h3>Sharing link</h3>
  <% if dashboard.valid? %>
    <div class="copy-url">
      <input type="text" value="<%= show_dashboard_url(dashboard.slug) %>" />
      <a data-clipboard-text="<%= show_dashboard_url(dashboard.slug) %>"
         class="btn default js-copy-button">
        Copy
      </a>
    </div>
  <% else %>
    <p>Save the dashboard first.</p>
  <% end %>
